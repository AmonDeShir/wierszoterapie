{
  "compilerOptions": {
    "target": "esnext",                                
    "lib": ["dom", "esnext"],                                       
    "jsx": "react-jsx",    
    "module": "esnext",                               
    "moduleResolution": "node",                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "allowSyntheticDefaultImports": true,
    "strict": true,                                     
    "skipLibCheck": true                             
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
